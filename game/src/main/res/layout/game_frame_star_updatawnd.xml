<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:id="@+id/build_updata_info"
    android:layout_width="wrap_content"
    android:layout_height="280dp"
    android:layout_alignParentTop="true"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="60dp" >

    <ImageView
        android:id="@+id/jz_xxmgc"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/info_build" style="@style/building_updata_txt"/>

    <TableLayout
        android:id="@+id/TableLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_achieve_name" android:layout_alignLeft="@+id/txt_achieve_name"
        android:layout_marginTop="10dp" android:layout_marginLeft="5dp">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前秒获：" style="@style/building_updata_txt"/>

            <TextView
                android:id="@+id/up_txt_yield_sec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0" style="@style/building_updata_txt"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/txt_cur_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="此物总获：" style="@style/building_updata_txt"/>

            <TextView
                android:id="@+id/up_txt_yield_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0" style="@style/building_updata_txt"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/txt_sec_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下级增产：" style="@style/building_updata_txt"/>

            <TextView
                android:id="@+id/up_txt_next_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0" style="@style/building_updata_txt"/>
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/txt_achieve_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前等级："
        android:textStyle="bold"
        android:layout_below="@+id/build_name" android:layout_alignLeft="@+id/build_name"
        android:layout_marginTop="10dp" style="@style/building_updata_txt"/>

    <TextView
        android:id="@+id/txt_info"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TableLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:maxWidth="200dp"
        android:text="说明" android:layout_marginLeft="10dp" style="@style/building_updata_txt"/>

    <ImageView
        android:id="@+id/jz_zxgd"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        android:src="@drawable/jz_xzdf"
        android:layout_alignParentRight="true" android:layout_alignParentEnd="false"
        android:layout_alignParentTop="true" android:layout_marginTop="20dp" android:layout_marginRight="80dp"/>

    <TextView
        android:id="@+id/up_txt_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_info"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="升级花费：" style="@style/building_updata_txt"/>

    <com.xianyun.game.XYButtonView
        android:id="@+id/up_close"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="24dp"
        android:layout_marginRight="22dp"
        android:scaleType="fitXY"
        android:src="@drawable/close" android:layout_alignParentBottom="true" android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <com.xianyun.game.XYButtonView
        android:id="@+id/up_updata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/up_txt_cost"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:src="@drawable/updata" />

    <TextView
        android:id="@+id/build_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="title"
        android:textStyle="bold"
        android:typeface="monospace"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp" android:layout_alignParentLeft="true" style="@style/building_updata_txt"/>

    <TextView
        android:id="@+id/up_txt_Level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textStyle="bold" android:layout_toRightOf="@+id/txt_achieve_name"
        android:layout_alignTop="@+id/txt_achieve_name" style="@style/building_updata_txt"/>

</RelativeLayout>