package com.example.game;

import android.os.Handler;
import android.util.Log;

public class ThreadUpdata extends Thread {
	
	private static SceneData sd;
	private static MainActivity act;
	private static Handler mhandler;
	public ThreadUpdata(MainActivity activity, Handler mHandler)
	{
		Log.e("game", "thread init");
		sd = SceneData.CreateData(act);
		Log.e("game", sd.toString());
		act = activity;
		mhandler = mHandler;

	}
	@SuppressWarnings("static-access")
	public void run()
	{
		while (true)
		{
			try {
				
				Thread.currentThread().sleep(1000);
			} catch (Exception e) {
				
			}
			updatasd();
			mhandler.sendMessage(mhandler.obtainMessage(0, " "));
		}
	}
	public void updatasd()
	{
		if (sd == null)
			Log.e("game", "sd null");
		sd.addStar(1);
	}
}
