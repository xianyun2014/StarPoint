package com.example.game;

public class SceneData {
	private static SceneData sd = null; //single 

	private long star; //star point number
	private long yield_sec;
	private long yield_click;
	private long [] yield_build;
	
	
	private SceneData(){ } //can't default create
	public static SceneData CreateData()
	{
		if (null == sd)
		{
			sd = new SceneData();
			sd.star = 0L;
			sd.yield_sec = 1L;
			sd.yield_click = 1L;
			sd.yield_build = new long[9];
		}
		return sd;
	}
	
	public void updata()
	{
		star += 1;
	}
	
	public String getStarStr()
	{
		return String.valueOf(star);
	}
	
	public void addStar(long val)
	{
		star += val;
	}
}
