package com.example.game;

import android.annotation.SuppressLint;
import android.content.Context;
import android.util.AttributeSet;
import android.view.MotionEvent;
import android.widget.ImageView;

public class OwnImageView extends ImageView{

	public OwnImageView(Context context) {
		super(context);
	}
    public OwnImageView(Context context, AttributeSet attrs) {
        super(context, attrs, 0);
    }
    public OwnImageView(Context context, AttributeSet attrs, int defStyle) {
    	super(context, attrs, defStyle);
    }
	@SuppressLint({ "NewApi", "ClickableViewAccessibility" }) @Override
	public boolean onTouchEvent(MotionEvent e)
	{
		switch (e.getAction())
		{
		case MotionEvent.ACTION_DOWN:
			setX(getX() + 5);
			setY(getY() + 5);
			break;
		case MotionEvent.ACTION_UP:
			setX(getX() - 5);
			setY(getY() - 5);
			break;
		}
		if (e.getAction() == MotionEvent.ACTION_UP)
		{
			switch (this.getId())
			{
			case R.id.imgStar:
				
			}
		}
		return true;
	}
	
}
