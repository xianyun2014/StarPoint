package com.example.game;

public class GameData {
	private static GameData sd = null; //single 

	public enum building{MZ, XXDF, MFW};
	
	private long star; //star point number
	private long yield_sec;
	private long yield_click;
	private long [] yield_build; //different building's yield
	private int [] build_multiple;
	
	
	
	private GameData(){ } //can't default create
	
	public static GameData CreateData()
	{
		if (null == sd)
		{
			sd = new GameData();
			sd.star = 0L;
			sd.yield_sec = 1L;
			sd.yield_click = 1L;
			sd.yield_build = new long[9];
			sd.build_multiple = new int[9];
		}
		return sd;
	}
	public String get_Star_Str()
	{
		return String.valueOf(star);
	}
	public void add_second()
	{
		star += yield_sec;
	}
	public void add_click()
	{
		star += yield_click;
	}
	
}
